<h1>一覧</h1>
<p><%= notice %></p>
<table>
  <tr>
    <th>投稿者</th>
    <th>画像</th>
    <th>本文</th>
  </tr>
<% @pictures.each do |picture| %>
  <tr>
    <td><%= picture.user.name %></td>
    <td><%= image_tag picture.image.url %></td>
    <td><%= picture.content %></td>
    <td><%= link_to '詳細を確認する', picture_path(picture.id) %></td>
    <td><%= link_to "ブログを編集する", edit_picture_path(picture.id) %></td>
    <td><%= link_to 'ブログを削除する', picture_path(picture.id), method: :delete, data: { confirm: '本当に削除していいですか？' } %>
  </tr>
<% end %>
</table>
<p><%= link_to '新しく写真を投稿する', new_picture_path %></p>
